{
  "name": "authentika-holistic-lifestyle",
  "version": "1.0.0",
  "description": "Authentika Holistic Lifestyle - E-commerce platform for spiritual and wellness products",
  "author": "Authentika Holistic Lifestyle",
  "license": "UNLICENSED",
  "private": true,
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test": "jest",
    "test:docker": "jest --config=jest.config.docker.js --runInBand",
    "test:docker:watch": "jest --config=jest.config.docker.js --watch",
    "test:docker:coverage": "jest --config=jest.config.docker.js --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:performance": "jest --selectProjects performance --testTimeout=30000",
    "test:security": "jest --selectProjects security",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint . --ext .js --fix",
    "lint:check": "eslint . --ext .js --max-warnings=500",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "docs:api": "node scripts/generateApiDocs.js",
    "validate": "npm run lint:check && npm run test:ci && npm run audit",
    "build:production": "cd client && npm run build && cd .. && npm run prepare:production",
    "prepare:production": "node scripts/prepare-production.js",
    "deploy:dreamhost": "bash deploy-dreamhost.sh"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint:check"
    }
  },
  "dependencies": {
    "@mollie/api-client": "^4.3.3",
    "@openai/codex": "^0.19.0",
    "bcryptjs": "^3.0.2",
    "connect-mongo": "^5.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.18.1",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "babel-jest": "^29.6.2",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^4.3.8",
    "jest": "^29.6.2",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^8.16.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
