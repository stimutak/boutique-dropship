# Docker Environment Configuration
NODE_ENV=development
PORT=5001

# Frontend
VITE_API_URL=http://localhost:5001
VITE_APP_NAME=International Boutique Store

# Database - Development
MONGODB_URI=mongodb://mongodb:27017/holistic-store

# Security (generate secure values - minimum 32 characters)
JWT_SECRET=your-jwt-secret-here-minimum-32-characters
SESSION_SECRET=your-session-secret-here-minimum-32-characters

# Payment (test mode)
MOLLIE_API_KEY=test_your_mollie_api_key_here
MOLLIE_TEST_KEY=test_your_mollie_test_key_here

# URLs
FRONTEND_URL=http://localhost:3001
API_URL=http://localhost:5001
ALLOWED_ORIGINS=http://localhost:3001,http://localhost

# Email Configuration (optional for dev)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Notifications
WHOLESALER_NOTIFICATION_EMAIL=orders@wholesaler.com

# API Keys for integrations
VALID_API_KEYS=comma-separated-api-keys

# Development Tools
MONGO_EXPRESS_PASSWORD=your-mongo-express-password

# International Support
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=USD
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,zh,ja,ko,ar,he
SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CNY,CAD,AUD,CHF,SEK,NOK,INR,BRL,MXN

# Currency API (using static rates for dev)
CURRENCY_API_KEY=your-currency-api-key
CURRENCY_UPDATE_INTERVAL=3600000

# CDN Configuration (disabled for dev)
CDN_URL=
CDN_ENABLED=false

# Performance
MAX_UPLOAD_SIZE=10485760
REQUEST_TIMEOUT=30000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100