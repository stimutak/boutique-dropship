# Docker Environment Configuration
# Copy this to .env and update with your values

# Application
NODE_ENV=production
PORT=5001

# Frontend
VITE_API_URL=http://localhost:5001
VITE_APP_NAME=International Boutique Store

# Database - Development
MONGODB_URI=mongodb://mongodb:27017/holistic-store

# Database - Production (update these!)
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=your-secure-root-password
MONGO_APP_USERNAME=boutique_app
MONGO_APP_PASSWORD=your-secure-app-password

# Redis - Production
REDIS_PASSWORD=your-secure-redis-password

# Security (generate these!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
SESSION_SECRET=your-session-secret-key-minimum-32-characters

# Payment
MOLLIE_API_KEY=your-mollie-live-api-key
MOLLIE_TEST_KEY=your-mollie-test-api-key

# URLs
FRONTEND_URL=http://localhost:3001
API_URL=http://localhost:5001
ALLOWED_ORIGINS=http://localhost:3001,http://localhost

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Notifications
WHOLESALER_NOTIFICATION_EMAIL=orders@wholesaler.com

# API Keys for integrations
VALID_API_KEYS=api_key_1,api_key_2,api_key_3

# Development Tools
MONGO_EXPRESS_PASSWORD=admin123

# International Support
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=USD
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,zh,ja,ko,ar,he
SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CNY,CAD,AUD,CHF,SEK,NOK,INR,BRL,MXN

# Currency API (for exchange rates)
CURRENCY_API_KEY=your-currency-api-key
CURRENCY_UPDATE_INTERVAL=3600000  # 1 hour in milliseconds

# CDN Configuration (optional)
CDN_URL=
CDN_ENABLED=false

# Performance
MAX_UPLOAD_SIZE=10485760  # 10MB
REQUEST_TIMEOUT=30000  # 30 seconds
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100